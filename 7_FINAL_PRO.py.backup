def analyze_audio(audio_float32):
    """AI analysis of audio chunk"""
    try:
        if model is None:
            return 0.0

        # Mel-spectrogram
        mel_spec = librosa.feature.melspectrogram(
            y=audio_float32,
            sr=SAMPLE_RATE,
            n_mels=N_MELS,
            fmax=8000
        )
        mel_spec_db = librosa.power_to_db(mel_spec, ref=np.max)
        mel_spec_norm = (mel_spec_db - mel_spec_db.min()) / (
            mel_spec_db.max() - mel_spec_db.min() + 1e-8
        )

        # Predict
        model_input = mel_spec_norm[np.newaxis, ..., np.newaxis]
        prediction = model.predict(model_input, verbose=0)
        return float(prediction[0][0])

    except Exception as e:
        logger.error(f"âŒ Analysis error: {e}")
        return 0.0

@app.websocket("/ws")
async def websocket_endpoint(websocket: WebSocket):
    """Professional WebSocket handler with error recovery"""
    await websocket.accept()
    client_id = id(websocket)
    logger.info(f"ğŸ“± Client connected: {client_id}")

    chunk_count = 0
    detection_count = 0

    try:
        while True:
            try:
                # Receive audio data
                data = await asyncio.wait_for(
                    websocket.receive_text(),
                    timeout=10.0
                )

                message = json.loads(data)

                if message.get("type") == "audio":
                    chunk_count += 1

                    # Decode base64 audio
                    audio_b64 = message.get("audio")
                    audio_bytes = base64.b64decode(audio_b64)
                    audio_int16 = np.frombuffer(audio_bytes, dtype=np.int16)
                    audio_float32 = audio_int16.astype(np.float32) / 32768.0

                    # AI analysis
                    prob = analyze_audio(audio_float32)
                    detected = prob > CONFIDENCE_THRESHOLD

                    if detected:
                        detection_count += 1
                        logger.info(f"ğŸ¦œ DETECTION #{detection_count}! Confidence: {prob*100:.1f}%")

                    # Send result
                    await websocket.send_text(json.dumps({
                        "detected": detected,
                        "probability": prob,
                        "chunk": chunk_count,
                        "detections": detection_count,
                        "timestamp": datetime.now().isoformat()
                    }))

                    # Log every 20 chunks
                    if chunk_count % 20 == 0:
                        logger.info(f"ğŸ“Š Processed {chunk_count} chunks, {detection_count} detections")

                elif message.get("type") == "ping":
                    await websocket.send_text(json.dumps({"type": "pong"}))

            except asyncio.TimeoutError:
                logger.warning(f"â±ï¸  Timeout for client {client_id}")
                await websocket.send_text(json.dumps({"type": "timeout"}))

    except WebSocketDisconnect:
        logger.info(f"ğŸ“± Client disconnected: {client_id} ({chunk_count} chunks, {detection_count} detections)")
    except Exception as e:
        logger.error(f"âŒ WebSocket error: {e}")
    finally:
        logger.info(f"ğŸ“± Session ended: {client_id}")

